{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ProjectOptions": {
    "XApiKey": "se"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId",
      "WithClientIp",
      "WithClientAgent"
    ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./Logs/RPG--.json",
          //path:"C:\\IMS\\Log--.txt"
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": "52428800",
          "retainedFileCountLimit": 20
        }
      },
      {
        "Name": "Console",
        "Args": {

          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }

      }


    ]
  }
}
